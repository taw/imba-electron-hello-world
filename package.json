{
  "name": "imba-electron-hello-world",
  "description": "Imba Electron Hello World",
  "keywords": [
    "imba",
    "electron",
    "sass"
  ],
  "author": "Tomasz Wegrzanowski",
  "version": "1.0.0",
  "engines": {
    "node": ">=6.0.0"
  },
  "main": "main.js",
  "scripts": {
    "build": "webpack --mode=production",
    "dev": "webpack-dev-server --mode=development --static dist/",
    "package-linux": "electron-packager . 'Hello World' --platform=linux",
    "package-osx": "electron-packager . 'Hello World' --platform=darwin",
    "package-windows": "electron-packager . 'Hello World' --platform=win32",
    "start": "electron .",
    "watch": "webpack --watch --progress --colors --display-modules"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/taw/imba-electron-hello-world.git"
  },
  "license": "MIT",
  "dependencies": {
    "css-loader": "^5.2.7",
    "electron-packager": "^17.1.1",
    "electron": "^22.3.25",
    "imba": "1.5.2",
    "mini-css-extract-plugin": "^1.6.2",
    "node-sass": "^8.0.0",
    "normalize-scss": "^7.0.1",
    "sass-loader": "^10.4.1",
    "webpack": "^4.46.0",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^5.2.1"
  }
}
